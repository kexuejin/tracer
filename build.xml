<project name="tracer" default="dist" basedir=".">
    <description>
        simple example build file
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="dist"  location="dist"/>
  <property name="package" value="ist.meic.pa"/>
  <property name="main" value="${package}.TraceVM"/>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}" classpath="javassist.jar"/>
  </target>
  
  <target name="run" depends="compile"
        description="run the program " >
    <!-- Compile the java code from ${src} into ${build} -->
    <java classname="${main}" classpath="${build}" />
  </target>
  
  <target name="dist" depends="compile"
        description="generate the distribution" >

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
  	<delete file="tracer.jar"/>
    <jar destfile="tracer.jar">
    	<fileset dir="${build}" />
    	<zipfileset includes="**/*.class" src="javassist.jar" />
    </jar>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
  </target>
</project>